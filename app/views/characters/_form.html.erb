<%= form_for @character, :html => { :class => "form-horizontal character" } do |f| %>

    <% if @character.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@character[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :exp, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :exp, :class => 'form-control' %>
    </div>
    <%= error_span(@character[:exp]) %>
  </div>
  <div class="control-group">
    <%= f.label :campaign_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :campaign_id, Campaign.all, :id, :name, {}, {:class => 'form-control', style: 'margin-bottom: 30px;'} %>
    </div>
    <%= error_span(@character[:campaign_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            characters_path, :class => 'btn btn-default' %>

<% end %>
